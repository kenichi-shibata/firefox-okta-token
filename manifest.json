{
    "manifest_version": 2,
    "name": "Okta Token Access",
    "version": "1.0",
    "description": "Retrieve Okta Access Token from localStorage",
    "icons" :{
        "48": "icons/logo48.png",
        "96": "icons/logo96.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}

